{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": ".",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "src/@types/**/*"] // Make sure to include your types folder]
}
